
#include <iostream>
using namespace std;
class ATM
{

  public:
  int bal =1000;
   void pin();
   void correctpin(int p);
    void debit(int d,int bal);
   void show(int c);
    void credit(int c);
    
};
void ATM::show(int d)
{
    cout<<"Balance remain:-";
    cout<<d;
}
void ATM::pin()
{
    int p;
    cout<<"enter your four digit pin:-";
    cin>>p;
    ATM ob;
    ob.correctpin(p);
}

void ATM::debit(int d,int bal)
{ATM deb;
    cout<<"Amount debited";
    deb.bal=deb.bal-d;
    show(deb.bal);

    }

void ATM::credit(int c)
{
    cout<<"amount credited";
    bal=bal+c; 
    ATM ob2;
 // ob2.show(bal);

}


void ATM::correctpin(int p)
{int cor = 1234;
    if(cor==p)
    {
        cout<<"correct pin"<<endl;
    }
    else
    {
        cout<<"incorrect pin"<<endl;
    }
}




int main()
{
    ATM ob4;
    ob4.pin();
    ob4.show();

  
    
    
}
