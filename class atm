
#include <iostream>
using namespace std;
class ATM
{

  public:
  int bal =1000;
   void pin();
   void correctpin(int p);
    void debit(int d,int bal);
    void show(int b);
    void credit(int c);
    
};
void ATM::debit(int d,int bal)
{cout<<"Amount debited";
    bal=bal-d;
    ATM ob1;
    ob1.show(bal);}

void ATM::credit(int c)
{
    cout<<"amount credited";
    bal=bal+c; 
    ATM ob;
    ob.show(bal);

}

// void show(int b)
// {
//     cout<<"Balance remain";
//     cout<<b;
// }
void ATM::correctpin(int p)
{int cor = 1234;
    if(cor==p)
    {
        cout<<"correct pin";
    }
    else
    {
        cout<<"incorrect pin";
    }
}
void ATM::pin()
{
    int p;
    cout<<"enter your four digit pin:-";
    cin>>p;
    ATM ob;
    ob.correctpin(p);
}




int main()
{
    ATM ob4;
    ob4.pin();
  
    
    
}
