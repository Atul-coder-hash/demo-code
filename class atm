
#include <iostream>
using namespace std;
class ATM
{

  public:
  int bal =1000;
  void option();
   void pin();
   void correctpin(int p);
    void debit(int d);
   void show(int c);
    void credit(int c);
    
};
void option()
{ATM opt;
    do{
        cout<<"1.debit"<<endl;
       cin>>opt.bal

    }
}
void ATM::show(int d)
{
    cout<<"Balance remain:-";
    cout<<d;
}
void ATM::pin()
{
    int p;
    cout<<"enter your four digit pin:-";
    cin>>p;
    ATM ob;
    ob.correctpin(p);
}

void ATM::debit(int d)
{ATM deb;
    cout<<"Amount debited:-";
    deb.bal=deb.bal-d;
    cout<<deb.bal<<endl;
    //show(deb.bal);

    }

void ATM::credit(int c)
{ATM cre;
    cout<<"amount credited:-";
    cre.bal=cre.bal+c; 
    cout<<cre.bal<<endl;
 

}


void ATM::correctpin(int p)
{int cor = 1234;
    if(cor==p)
    {
        cout<<"correct pin"<<endl;
    }
    else
    {
        cout<<"incorrect pin"<<endl;
    }
}




int main()
{
    ATM ob4;
    ob4.pin();
    ob4.debit(100);
    ob4.credit(500);
    
    //ob4.show();

  
    
    
}
