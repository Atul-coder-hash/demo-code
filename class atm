
#include <iostream>
using namespace std;
class ATM
{

  public:
  int bal =1000;
  void option();
   void pin();
   void correctpin(int p);
    void debit(int d);
   void show();
    void credit(int c);
    
};
void ATM::option()
{ATM r;
    int a,b;


        cout<<"1.debit"<<endl;    
        cout<<"2.credit"<<endl;
       cout<<"3.Balance"<<endl;
       cout<<"4. Exit"<<endl;
       cout<<"5.change pin"<<endl;
       cout<<"enter option:-";
       cin>>a;
       switch(a)
       {
        case 1:cout<<"enter amount:-";
                    cin>>b;
                    r.debit(b);
                    break;
        case 2:cout<<"enter amount:-";
                    cin>>b;
                    r.credit(b);
                    break;
         case 3:cout<<"Balance-";
                    r.show();
    

       }

    

}
void ATM::show()
{ATM baln;
    cout<<"Balance remain:-";
    cout<<baln.bal;
}
void ATM::pin()
{
    int p;
    cout<<"enter your four digit pin:-";
    cin>>p;
    ATM ob;
    ob.correctpin(p);
}

void ATM::debit(int d)
{ATM deb;
    cout<<"Amount debited:-";
    deb.bal=deb.bal-d;
    cout<<deb.bal<<endl;
    //show(deb.bal);

    }

void ATM::credit(int c)
{ATM cre;
    cout<<"amount credited:-";
    cre.bal=cre.bal+c; 
    cout<<cre.bal<<endl;
 

}


void ATM::correctpin(int p)
{ATM opt;
    int cor = 1234;
    if(cor==p)
    {
        
        opt.option();

    }
    else
    {
        cout<<"incorrect pin"<<endl;
    }
}




